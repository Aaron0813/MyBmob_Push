<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bmob.bmobpushdemo.MainActivity" >


    <Button
        android:id="@+id/btn_sendAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="发送一条消息给所有设备" />
    
    <Button
        android:id="@+id/btn_sendMsgToAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="按条件推送消息" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加正常的数据"
        android:onClick="onClick"
        android:id="@+id/btn_add_normal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加异常的数据"
        android:onClick="onClick"
        android:id="@+id/btn_add_abnormal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询异常的数据"
        android:onClick="onClick"
        android:id="@+id/btn_query"/>

</LinearLayout>